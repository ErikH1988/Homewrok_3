<h1>Welcome to RetFlix!</h1>
<p>See our collection of movies below</p>

  <%= form_tag(search_movies_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Movies" %>
     <%= submit_tag "Search" %>
    </div>
  <% end %>


<%= link_to 'Add New Movie', new_movie_path %>


  <% @movies.each do |movie| %>
    <tr>
      <p><%= movie.title %></p>
      <%= link_to 'Info', movie_path(movie) %>
    </tr>
  <% end %>
